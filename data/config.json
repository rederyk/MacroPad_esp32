{
  "wifi": {
    "ap_ssid": "ESP32_MacroPad",
    "ap_password": "my_cat_name123",
    "router_ssid": "ROUTER_SSID",
    "router_password": "SSID_Password"
  },
  "system": {
    "ap_autostart": false,
    "router_autostart": true,
    "enable_BLE": false,
    "serial_enabled": false,
    "BleMacAdd": 0,
    "combo_timeout": 100,
    "BleName": "Macropad_esp32"
  },
  "keypad": {
    "rows": 3,
    "cols": 3,
    "rowPins": [0, 4, 16],
    "colPins": [17, 5, 18],
    "keys": [
      ["1", "2", "3"],
      ["4", "5", "6"],
      ["7", "8", "9"]
    ],
    "invertDirection": true
  },
  "encoder": {
    "pinA": 13,
    "pinB": 15,
    "buttonPin": 2,
    "stepValue": 1
  },
  "accelerometer": {
    "sdaPin": 19,
    "sclPin": 23,
    "sensitivity": 2.0,
    "sampleRate": 100,
    "threshold": 500,
    "axisMap": "zyx"
  },
  "combinations": {
    "1": ["S_B:1"],
    "2": ["S_B:Up_arrow"],
    "3": ["S_B:3"],
    "4": ["S_B:Left_arrow"],
    "5": ["S_B:5"],
    "6": ["S_B:Right_arrow"],
    "7": ["S_B:7"],
    "8": ["S_B:Down_arrow"],
    "9": ["S_B:9"],
    "2+5": ["S_B:SUPER+w"],
    "4+5": ["S_B:CTRL+SUPER,Left_arrow"],
    "5+6": ["S_B:CTRL+SUPER,Right_arrow"],
    "6+9": ["CONVERT_JSON_BINARY"],
    "8+9": ["CLEAR_A_GESTURE"],
    "CW": ["S_B:MOUSE_MOVE_0_0_1_0"],
    "CCW": ["S_B:MOUSE_MOVE_0_0_-1_0"],
    "2+3+BUTTON": ["EXECUTE_GESTURE"],
    "2+BUTTON": ["TRAIN_GESTURE"],
    "G_ID:1": ["S_B:CTRL+SUPER,Left_arrow"],
    "G_ID:2": ["S_B:SUPER+q"],
    "G_ID:0": ["S_B:CTRL+SUPER,Right_arrow"],
    "G_ID:3": ["S_B:SUPER+l"],
    "1,CW": ["S_B:VOL_UP"],
    "1,CCW": ["S_B:VOL_DOWN"],
    "1+9": ["MEM_INFO"],
    "1+2,CW": ["S_B:MOUSE_MOVE_0_0_5_0"],
    "1+2,CCW": ["S_B:MOUSE_MOVE_0_0_-5_0"],
    "1+3,CW": ["S_B:NEXT_PLAYLIST"],
    "1+3,CCW": ["S_B:PREV_PLAYLIST"],
    "1+5+9": ["CALIBRATE_SENSOR"],
    "1+2+3,BUTTON": ["TOGGLE_BLE_WIFI"],
    "1+4+7,BUTTON": ["HOP_BLE_DEVICE"],
    "7+8+9,BUTTON": ["RESET_ALL"]
  }
}
