  "usage_examples": {
    "_comment": "Esempi pratici di configurazione macro con gesture",

    "example_1_media_control": {
      "description": "Controllo media player con gesture MPU6050",
      "macros": [
        {
          "profile": "media",
          "key": "gesture_201",
          "action": "MEDIA_NEXT_TRACK",
          "note": "Ruota CW per traccia successiva"
        },
        {
          "profile": "media",
          "key": "gesture_202",
          "action": "MEDIA_PREVIOUS_TRACK",
          "note": "Ruota CCW per traccia precedente"
        },
        {
          "profile": "media",
          "key": "G_TILT_FORWARD",
          "action": "MEDIA_VOLUME_DOWN",
          "note": "Inclina avanti per volume giù"
        },
        {
          "profile": "media",
          "key": "G_TILT_BACKWARD",
          "action": "MEDIA_VOLUME_UP",
          "note": "Inclina indietro per volume su"
        },
        {
          "profile": "media",
          "key": "G_CIRCLE",
          "action": "MEDIA_PLAY_PAUSE",
          "note": "Cerchio per play/pause"
        }
      ]
    },

    "example_2_navigation": {
      "description": "Navigazione desktop con tilt",
      "macros": [
        {
          "profile": "desktop",
          "key": "G_TILT_LEFT",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "WIN", "LEFT"],
          "note": "Tilt left = Workspace a sinistra"
        },
        {
          "profile": "desktop",
          "key": "G_TILT_RIGHT",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "WIN", "RIGHT"],
          "note": "Tilt right = Workspace a destra"
        },
        {
          "profile": "desktop",
          "key": "G_TILT_FORWARD",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "DOWN"],
          "note": "Tilt forward = Mostra tutti workspace"
        }
      ]
    },

    "example_3_photo_editing": {
      "description": "Editing foto con gesture shape",
      "macros": [
        {
          "profile": "photoshop",
          "key": "G_CIRCLE",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "A"],
          "note": "Cerchio = Seleziona tutto"
        },
        {
          "profile": "photoshop",
          "key": "G_SQUARE",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "SHIFT", "S"],
          "note": "Quadrato = Salva con nome"
        },
        {
          "profile": "photoshop",
          "key": "G_ZIGZAG",
          "action": "KEY_COMBO",
          "keys": ["CTRL", "Z"],
          "note": "Zigzag = Undo"
        }
      ]
    },

    "example_4_custom_adxl345": {
      "description": "Gesture personalizzate ADXL345 (KNN training)",
      "training_required": true,
      "macros": [
        {
          "profile": "custom",
          "key": "gesture_0",
          "action": "LAUNCH_APP",
          "app": "chrome.exe",
          "note": "Gesture custom 0 = Apri browser"
        },
        {
          "profile": "custom",
          "key": "gesture_1",
          "action": "KEY_COMBO",
          "keys": ["WIN", "L"],
          "note": "Gesture custom 1 = Blocca PC"
        },
        {
          "profile": "custom",
          "key": "gesture_2",
          "action": "TYPE_STRING",
          "text": "mia_email@example.com",
          "note": "Gesture custom 2 = Digita email"
        }
      ]
    }
  },

  "configuration_tips": {
    "mpu6050_recommended": {
      "title": "Setup consigliato per MPU6050",
      "config": {
        "gestureMode": "auto",
        "confidenceThreshold": 0.5,
        "preferred_gestures": [
          "orientation (tilt/rotate) per azioni rapide",
          "shape per azioni complesse"
        ]
      }
    },
    "adxl345_recommended": {
      "title": "Setup consigliato per ADXL345",
      "config": {
        "gestureMode": "adxl345",
        "confidenceThreshold": 0.6,
        "training_note": "Registra 3-5 sample per gesture per migliore accuratezza"
      }
    }
  }
}
